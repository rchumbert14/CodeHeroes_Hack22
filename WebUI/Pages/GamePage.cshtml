@page
@using Hack22.Pages
@model IndexModel
@{
    ViewData["Title"] = "Game page";
}
<!-- Game Page -->
<!-- Image and Health -->
<div class = "position-absolute top-50 start-50 translate-middle text-center bg-dark text-white p-5">
    <h1 class="h1 text-white">Game Time!</h1>
    <div class = "parent top-50 start-50 translate-middle">
        <!-- Hero health -->
        <img src = "https://cdn.discordapp.com/attachments/753824949223030956/1041131176020160552/HealthFull.png" class="float-start" name="HeroHP1">
        <img src = "https://cdn.discordapp.com/attachments/753824949223030956/1041131176020160552/HealthFull.png" class="float-start" name="HeroHP2">
        <img src = "https://cdn.discordapp.com/attachments/753824949223030956/1041131176020160552/HealthFull.png" class="float-start" name="HeroHP3">
        <!-- Monster Health -->
        <img src = "https://cdn.discordapp.com/attachments/753824949223030956/1041131176020160552/HealthFull.png" class="float-end" name="MonsterHP3">
        <img src = "https://cdn.discordapp.com/attachments/753824949223030956/1041131176020160552/HealthFull.png" class="float-end" name="MonsterHP2">
        <img src = "https://cdn.discordapp.com/attachments/753824949223030956/1041131176020160552/HealthFull.png" class="float-end" name="MonsterHP1">
    </div>
</div>
<!-- Game UI -->
<div class = "position-absolute top-100 start-50 translate-middle text-center bg-dark text-white p-2">
    <h1 class = "h4">Question here</h1>
    <div class = "container text-center">
        <div class = "row p-3">
            <div class="column">
                <button class="btn btn-primary">Answer 1</button>
                <button class="btn btn-primary">Answer 2</button>
            </div>
            <div class="column">
                <button class="btn btn-primary">Answer 3</button>
                <button class="btn btn-primary">Answer 4</button>
            </div>
        </div>
        <div class = "row">
            <div class="column">

            </div>
            <div class="column">

            </div>
        </div>
    </div>
    
</div>
