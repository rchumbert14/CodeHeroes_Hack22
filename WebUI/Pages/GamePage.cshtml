@page
@using Hack22.Pages
@model IndexModel
@{
    ViewData["Title"] = "Game page";
}
<!-- Game Page -->
<!-- Image and Health -->
<div class = "position-absolute top-50 start-50 translate-middle text-center bg-dark text-white p-5">
    <h1 class="h1 text-white">Game Time!</h1>
    <div class = "parent top-50 start-50 translate-middle">
        <!-- Hero health -->
        <img src = "Imgs\HealthFull.png" class="float-start heroHP">
        <img src = "Imgs\HealthFull.png" class="float-start heroHP">
        <img src = "Imgs\HealthFull.png" class="float-start heroHP">
        <!-- Monster Health -->
        <img src = "Imgs\HealthFull.png" class="float-end monHP">
        <img src = "Imgs\HealthFull.png" class="float-end monHP">
        <img src = "Imgs\HealthFull.png" class="float-end monHP">
    </div>
</div>
<!-- Game UI -->
<div class = "position-absolute top-100 start-50 translate-middle text-center bg-dark text-white p-2">
    <h1 class = "h4" id="question">Question here</h1>
    <div class = "container text-center">
        <div class = "row p-3">
            <div class="column">
                <button class="btn btn-primary answer" onclick = "test()" id = "idtest">Answer 1</button>
                <button class="btn btn-primary answer">Answer 2</button>
            </div>
            <div class="column">
                <button class="btn btn-primary answer">Answer 3</button>
                <button class="btn btn-primary answer">Answer 4</button>
            </div>
        </div>
    </div>
    <script src="js/MultipleChoice.js"></script>
</div>
